<h1>Products</h1>
<%= link_to "New product", new_product_path %>
<div id="products">
<% @products.each do |product|%>
 <div class="card">
 <img class="card-img-top" src=<%=product.img%> width="100">
    <div class="card-body">
    <div class="card-title"><%=product.name%></div>
    <div class="card-text"><%=product.description%></div>
    <%=link_to "View", product %>

   <%if user_signed_in?%>
    <%= button_to "Delete", product_path(product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %>
   <%end%>

    </div>
 </div>
<div>

</div>

<%end%>
</div>

<%if user_signed_in?%>
<div> 
    Welcome, <%= current_user.username %> (<%= current_user.email %>) 
  </div>
<% @products.each do |product| %>
  <% if product.user == current_user %>
    <p><%= product.name %> - <%= product.price %> USD</p>
  <% end %>
<% end %>

<%end%>