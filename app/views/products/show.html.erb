<div class="container my-5">
  <div class="row">
   
    <div class="col-md-6">
  <div class="h-100 w-100">
    <img src="<%= @product.img %>" class="img-fluid rounded shadow" alt="<%= @product.name %>" style="width: 100%; height: 100%; object-fit: cover;">
  </div>
</div>


    <div class="col-md-6 d-flex flex-column justify-content-center">
      <h1 class="fw-bold text-primary mb-3"><%= @product.name %></h1>
      <h3 class="text-success mb-3">Price: $<%= @product.price %></h3>
      <p class="text-muted mb-4"><%= @product.description %></p>

      <div class="d-flex">
        <% if user_signed_in? %>
          <%= button_to "Add to Cart", cart_items_path(product_id: @product.id, quantity: 1), method: :post, class: "btn btn-primary btn-lg me-3" %>
        <% else %>
          <%= link_to "Add to Cart", new_user_session_path, class: "btn btn-primary btn-lg me-3", data: { turbo: false } %>
        <% end %>
        <%= link_to "Back", root_path, class: "btn btn-secondary btn-lg" %>
      </div>
    </div>
  </div>
</div>
